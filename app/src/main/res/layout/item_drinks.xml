<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="0.2dp"
    app:cardBackgroundColor="#ffff"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!--        imagen-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageDrinks"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="center" />

        <TextView
            android:id="@+id/nameImgDrinksItem"
            android:text="@string/name_img_drinks_item"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="#D6D6D6"
            android:gravity="center"/>

        <TextView
            android:id="@+id/priceDrinksItem"
            android:text="@string/price_drinks_item"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="#D6D6D6"
            android:gravity="center"/>

        <TextView
            android:id="@+id/descriptionDrinksItem"
            android:text="@string/description_drinks_item"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="#D6D6D6"
            android:gravity="center"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>